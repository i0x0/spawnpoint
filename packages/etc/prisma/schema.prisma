generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// account -> user (account is public while user is private)

model Account {
  id        String   @id @unique
  user      User     @relation(fields: [id], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teams     Team[]
}

model User {
  id        String   @id @unique
  data      Json
  account   Account?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TeamType {
  SINGLE
  GROUP
}

model Team {
  id      String    @id @unique
  name    String
  games   Game[]
  members Account[]
  type    TeamType
}

model Game {
  id      String @id @unique
  name    String
  ownerId String
  owner   Team   @relation(fields: [ownerId], references: [id])
}
